// -*- mode: c++ -*-

#define __RAPTOR_MPFR_DOUBLE_BINOP(LLVM_OP_NAME, MPFR_FUNC_NAME,               \
                                   ROUNDING_MODE)                              \
  __RAPTOR_MPFR_BIN(binop, LLVM_OP_NAME, MPFR_FUNC_NAME, 64_52, double, d,     \
                    double, d, double, d, ROUNDING_MODE)

#define __RAPTOR_MPFR_DOUBLE_BINFUNCINTR(LLVM_OP_NAME, MPFR_FUNC_NAME,         \
                                         ROUNDING_MODE)                        \
  __RAPTOR_MPFR_BIN(intr, LLVM_OP_NAME, MPFR_FUNC_NAME, 64_52, double, d,      \
                    double, d, double, d, ROUNDING_MODE)                       \
  __RAPTOR_MPFR_BIN(intr, llvm_##LLVM_OP_NAME##_f64, MPFR_FUNC_NAME, 64_52,    \
                    double, d, double, d, double, d, ROUNDING_MODE)            \
  __RAPTOR_MPFR_BIN(func, LLVM_OP_NAME, MPFR_FUNC_NAME, 64_52, double, d,      \
                    double, d, double, d, ROUNDING_MODE)                       \
  __RAPTOR_MPFR_BIN(func, __##LLVM_OP_NAME##_finite, MPFR_FUNC_NAME, 64_52,    \
                    double, d, double, d, double, d, ROUNDING_MODE)

#define __RAPTOR_MPFR_DOUBLE_BINOP_DEFAULT_ROUNDING(LLVM_OP_NAME,              \
                                                    MPFR_FUNC_NAME)            \
  __RAPTOR_MPFR_DOUBLE_BINOP(LLVM_OP_NAME, MPFR_FUNC_NAME,                     \
                             __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)

#define __RAPTOR_MPFR_DOUBLE_BINFUNCINTR_DEFAULT_ROUNDING(LLVM_OP_NAME,        \
                                                          MPFR_FUNC_NAME)      \
  __RAPTOR_MPFR_DOUBLE_BINFUNCINTR(LLVM_OP_NAME, MPFR_FUNC_NAME,               \
                                   __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)

#define __RAPTOR_MPFR_SINGOP_DOUBLE_FLOAT(LLVM_NAME, MPFR_NAME)                \
  __RAPTOR_MPFR_SINGOP(intr, LLVM_NAME, MPFR_NAME, 64_52, double, d, double,   \
                       d, __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)                 \
  __RAPTOR_MPFR_SINGOP(intr, llvm_##LLVM_NAME##_f64, MPFR_NAME, 64_52, double, \
                       d, double, d, __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)      \
  __RAPTOR_MPFR_SINGOP(func, LLVM_NAME, MPFR_NAME, 64_52, double, d, double,   \
                       d, __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)                 \
  __RAPTOR_MPFR_SINGOP(func, __##LLVM_NAME##_finite, MPFR_NAME, 64_52, double, \
                       d, double, d, __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)      \
  __RAPTOR_MPFR_SINGOP(TYPE, LLVM_NAME, MPFR_NAME, 32_23, float, d, float, d,  \
                       __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)                    \
  __RAPTOR_MPFR_SINGOP(intr, LLVM_NAME, MPFR_NAME, 32_23, float, d, float, d,  \
                       __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)                    \
  __RAPTOR_MPFR_SINGOP(intr, llvm_##LLVM_NAME##_f32, MPFR_NAME, 32_23, float,  \
                       d, float, d, __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)       \
  __RAPTOR_MPFR_SINGOP(func, LLVM_NAME, MPFR_NAME, 32_23, float, d, float, d,  \
                       __RAPTOR_MPFR_DEFAULT_ROUNDING_MODE)

